    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Keskonmange">
        <activity android:name=".ModifMyRecipe"></activity>
        <activity android:name=".DetailedDescription" />
        <activity android:name=".PreSelectedIng" />
        <activity android:name=".Choice_recipe_consult" />
        <activity android:name=".Recipes_Scrolling" />
        <activity android:name=".Onboard1" />
        <activity android:name=".Onboard2" />
        <activity android:name=".Onboard3" />
        <activity android:name=".Login" />
        <activity android:name=".Register">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AuthenticatorApp" />
        <activity android:name=".Choix_ing_consult" />
        <activity android:name=".CreationOrConsulationPage" />
        <activity android:name=".FillInCreate" />
