<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailedDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ExtraText">

        <!-- Relative Layout semble le mieux pour ce que tu dois faire ici-->

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <RatingBar
            android:id="@+id/rating_bar_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true" />

        <Button
            android:id="@+id/button_ratting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Soumettre ma note" />

        <EditText
            android:id="@+id/description_modif"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <ListView
            android:id="@+id/modif_ing"
            android:layout_width="wrap_content"
            android:layout_height="150dp"/>


        <Button
            android:id="@+id/button_modif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Modifier ma recette" />

        <Button
            android:id="@+id/update_modif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Mettre Ã  jour ma recette" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="supprimer ma recette"/>

        <TextView
            android:id="@+id/average_note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />



    </LinearLayout>

</ScrollView>