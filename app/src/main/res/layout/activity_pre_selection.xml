<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreSelectedIng">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_ing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IngrÃ©dient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_add_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn_rm_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supprimer"
                android:textSize="10dp" />
            <Button
                android:id="@+id/btn_return_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retourner au menu"
                android:onClick="back_menu"
                android:textSize="10dp" />


        </LinearLayout>

        <ListView
            android:id="@+id/list_ing"
            android:layout_width="wrap_content"
            android:layout_height="508dp"
            android:visibility="visible"></ListView>

    </LinearLayout>


</ScrollView>