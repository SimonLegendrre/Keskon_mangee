<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreSelectedIng">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Ajoutez ici tous les ingrédients que vous avez à disposition"
            />

        <AutoCompleteTextView
            android:id="@+id/AtcTV_et_ing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:completionHint="Clickez sur un des ingrédients du dessus"
            android:completionThreshold="2"
            android:hint="Ingrédient"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_add_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btn_rm_ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supprimer"
                android:textSize="10dp" />
            <Button
                android:id="@+id/btn_return_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retourner au menu"
                android:onClick="back_menu"
                android:textSize="10dp" />


        </LinearLayout>

        <ListView
            android:id="@+id/list_ing"
            android:layout_width="wrap_content"
            android:layout_height="508dp"
            android:visibility="visible"></ListView>

    </LinearLayout>


</ScrollView>